---
interface Props {
  hashtags: string[];
  className?: string;
}

const { hashtags, className = "" } = Astro.props;
---

{hashtags && hashtags.length > 0 && (
  <div class={`flex flex-wrap gap-2 ${className}`}>
    {hashtags.map((hashtag) => (
      <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-700 hover:bg-blue-200 transition-colors cursor-pointer">
        {hashtag}
      </span>
    ))}
  </div>
)}
