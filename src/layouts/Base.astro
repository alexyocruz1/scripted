---
const { title = "My Blog", description = "Thoughts & updates", noIndex = false } = Astro.props;
const isProd = import.meta.env.PROD;
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <meta name="robots" content={noIndex ? "noindex, nofollow" : "index, follow"} />
    <link rel="icon" href="/favicon.ico" />
    <title>{title}</title>
    <link rel="stylesheet" href="/pagefind/pagefind-ui.css" />
  </head>
  <body class="min-h-screen bg-white text-slate-900">
    <header class="sticky top-0 backdrop-blur border-b border-slate-200/60 bg-white/75">
      <nav class="mx-auto max-w-[var(--maxw)] px-4 py-3 flex items-center justify-between">
        <a href="/" class="font-semibold">My Blog</a>
        <div class="flex items-center gap-4">
          <a href="/blog/">Blog</a>
          <a href="/newsletter/">Newsletter</a>
          <a href="/rss.xml">RSS</a>
          <button id="search-button" class="px-3 py-1 rounded-lg border border-slate-300">Search</button>
        </div>
      </nav>
    </header>
    <main class="mx-auto max-w-[var(--maxw)] px-4 py-8">
      <slot />
    </main>
    <footer class="mx-auto max-w-[var(--maxw)] px-4 py-10 text-sm text-slate-500 border-t border-slate-200/60">
      <p>&copy; {new Date().getFullYear()} Your Name. Built with Astro.</p>
    </footer>
    <div id="search" class="fixed inset-0 hidden bg-black/40 p-6">
      <div id="search-ui" class="mx-auto max-w-3xl bg-white rounded-xl p-4"></div>
    </div>
    <script src="/pagefind/pagefind-ui.js" type="text/javascript"></script>
    <script type="module">
      // Simple Pagefind UI toggle
      const open = () => {
        document.getElementById('search').classList.remove('hidden');
        if (window.PagefindUI && !window.__pagefind_inited) {
          new window.PagefindUI({ element: "#search-ui", showImages: false });
          window.__pagefind_inited = true;
        }
      };
      const close = (e) => {
        if (e.target.id === 'search') document.getElementById('search').classList.add('hidden');
      };
      document.getElementById('search-button')?.addEventListener('click', open);
      document.getElementById('search')?.addEventListener('click', close);
    </script>
    <!-- Cloudflare Web Analytics (replace token and uncomment before deploy)
    <script defer src="https://static.cloudflareinsights.com/beacon.min.js" data-cf-beacon='{"token": "YOUR_TOKEN"}'></script>
    -->
  </body>
</html>
