---
import Base from "../../../layouts/Base.astro";
import { getCollection } from "astro:content";
import { TOPIC_METADATA, TOPICS } from "../../../content/config";
import { useTranslations } from "../../../i18n/config";

// Get all posts grouped by topic (English only)
const allPosts = await getCollection("blog", ({ data }) => !data.draft && data.lang === 'en');
const postsByTopic = Object.values(TOPICS).reduce((acc, topic) => {
  acc[topic] = allPosts
    .filter(post => post.data.topic === topic)
    .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
  return acc;
}, {} as Record<string, typeof allPosts>);

const t = useTranslations('en');
---

<Base title={`${t('nav.topics')} - Scripted`}>
  <!-- Header -->
  <div class="mb-16 text-center">
    <h1 class="text-5xl font-bold mb-6">{t('topics.browseBy')}</h1>
    <p class="text-xl text-slate-600 max-w-2xl mx-auto">{t('topics.findWhat')}</p>
  </div>

  <!-- Topics Grid -->
  <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
    {Object.entries(TOPIC_METADATA).map(([topicKey, metadata]) => {
      const posts = postsByTopic[topicKey] || [];
      const latestPost = posts[0];
      
      return (
        <a 
          href={`/en/topics/${topicKey}/`}
          class="block group"
        >
          <div class="bg-white rounded-xl border border-slate-200 p-6 shadow-md hover:shadow-xl transition-all duration-300 hover:-translate-y-1 h-full">
            <div class="flex items-center gap-3 mb-4">
              <span class="text-2xl">{metadata.icon}</span>
              <h2 class="text-xl font-bold group-hover:text-blue-600 transition-colors">{metadata.name}</h2>
            </div>
            
            <p class="text-slate-600 mb-4 leading-relaxed">
              {metadata.description}
            </p>
            
            <div class="mb-4">
              <span class={`px-3 py-1 rounded-full text-sm font-medium ${metadata.color}`}>
                {posts.length} {t('topics.posts')}
              </span>
            </div>
            
            {latestPost && (
              <div class="border-t border-slate-200 pt-4">
                <p class="text-sm text-slate-500 mb-2">{t('topics.latest')}</p>
                <div class="block">
                  <h3 class="font-semibold group-hover:text-blue-600 transition-colors line-clamp-2">
                    {latestPost.data.title}
                  </h3>
                  <p class="text-sm text-slate-500 mt-1">
                    {new Date(latestPost.data.pubDate).toLocaleDateString('en-US')}
                  </p>
                </div>
              </div>
            )}
          </div>
        </a>
      );
    })}
  </div>
</Base>
